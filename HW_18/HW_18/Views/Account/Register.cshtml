@model HW_18.ViewModels.RegisterViewModel

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card auth-card shadow-lg">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-light">Регистрация</h2>

            <form asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-light"></label>
                    <input asp-for="Email" class="form-control custom-input" placeholder="Введите email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light"></label>
                    <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Введите пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PasswordConfirm" class="form-label text-light"></label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control custom-input" placeholder="Повторите пароль" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</div>
