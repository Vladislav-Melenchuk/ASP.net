@using HW_18.ViewModels
@model LoginViewModel

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card auth-card shadow-lg">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-light">Вход</h2>

            <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-light"></label>
                    <input asp-for="Email" class="form-control custom-input" placeholder="Введите email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-light"></label>
                    <input asp-for="Password" type="password" class="form-control custom-input" placeholder="Введите пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-light"></label>
                </div>

                <button type="submit" class="btn btn-success w-100">Войти</button>
            </form>
        </div>
    </div>
</div>
