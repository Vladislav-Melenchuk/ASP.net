@model IEnumerable<HW_18.Models.Post>

<h2>Лента постов</h2>


<div class="mb-3">
    <a class="btn btn-success" asp-action="Create" asp-controller="Post">Создать пост</a>
</div>

<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-6 mb-3">
            <div class="card bg-dark text-light shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Content</p>
                    <small class="text-muted">Автор: @post.User.Email</small><br />
                    <span class="badge bg-info">@post.Visibility</span>
                </div>
            </div>
        </div>
    }
</div>
