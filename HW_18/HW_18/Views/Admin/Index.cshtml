@using Microsoft.AspNetCore.Identity
@model IEnumerable<HW_18.Models.User>

<h2>Панель администратора</h2>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Роли</th>
            <th>Управление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Email</td>
            <td>
                @string.Join(", ", await Context.RequestServices
                                .GetService<UserManager<HW_18.Models.User>>()
                                .GetRolesAsync(user))
            </td>
            <td>
                <form asp-action="ChangeRole" method="post" class="d-inline">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <select name="role" class="form-select form-select-sm d-inline w-auto">
                        <option>User</option>
                        <option>Moderator</option>
                        <option>Admin</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-warning">Изменить</button>
                </form>

                @if (user.LockoutEnd == null)
                    {
                        <form asp-action="BlockUser" method="post" class="d-inline">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Блокировать</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="UnblockUser" method="post" class="d-inline">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Разблокировать</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
