@model IEnumerable<HW_17.Models.Notes>

<h2>Мои заметки</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить заметку</a>
</p>

<table class="table">
    <tr>
        <th>Заголовок</th>
        <th>Создана</th>
        <th></th>
    </tr>
    @foreach (var note in Model)
    {
        <tr>
            <td>@note.Title</td>
            <td>@note.CreatedAt.ToLocalTime()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@note.Id">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@note.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
