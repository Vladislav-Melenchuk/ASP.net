<h2>Вхід</h2>

@using (Html.BeginForm()) {
    <label>Логін</label>
    <input type="text" name="username" />
    <br />

    <label>Пароль</label>
    <input type="password" name="password" />
    <br />

    <button type="submit">Увійти</button>
}

@if (ViewBag.Error != null) {
    <p style="color:red">@ViewBag.Error</p>
}
