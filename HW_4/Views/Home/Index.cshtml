@model IEnumerable<HW_4.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container mt-4">
    <h1>Список пользователей</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Добавить пользователя</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Email</th>
                <th>Возраст</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Age</td>
                    <td>
                        <a asp-action="Details" asp-route-email="@user.Email" class="btn btn-info btn-sm">Подробнее</a>
                        <a asp-action="Edit" asp-route-email="@user.Email" class="btn btn-warning btn-sm">Редактировать</a>
                        <a asp-action="Delete" asp-route-email="@user.Email" class="btn btn-danger btn-sm">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
