@model HW_4.Models.User

@{
    ViewData["Title"] = "Редактировать пользователя";
}

<h1>Редактировать пользователя</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label>Имя</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Возраст</label>
        <input asp-for="Age" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-warning mt-2">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Отмена</a>
</form>
