@model HW_4.Models.User

@{
    ViewData["Title"] = "Добавить пользователя";
}

<h1>Добавить пользователя</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Имя</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Возраст</label>
        <input asp-for="Age" class="form-control" type="number" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Добавить</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Отмена</a>
</form>
