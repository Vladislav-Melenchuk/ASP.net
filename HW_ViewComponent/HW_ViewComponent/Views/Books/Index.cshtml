@model IEnumerable<HW_ViewComponent.Models.Book>

@{
    ViewData["Title"] = "Каталог книг";
}

<h1>Каталог книг</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Жанр</th>
            <th>Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-primary">
                        Подробнее
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
