@model List<HW_RazorPage.Models.TodoItem>

@{
    ViewData["Title"] = "To-Do List";
}

<section class="container">
    <h1 class="title">Мій список справ</h1>

    <div class="card">
        <h2>Додати нове завдання</h2>
        <form asp-action="Create" method="post" class="todo-form">
            <div class="form-row">
                <input type="text" name="Title" class="input" placeholder="Наприклад: Купити молоко" />
                <button type="submit" class="btn primary">Додати</button>
            </div>
        </form>

    </div>

    <div class="card">
        <h2>Поточні завдання</h2>
        @if (Model.Any())
        {
            <ul class="todo-list">
                @foreach (var t in Model)
                {
                    <li class="todo-item @(t.IsCompleted ? "done" : "")">
                        <form asp-action="Toggle" method="post" class="inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="icon-btn">@(t.IsCompleted ? "☑" : "☐")</button>
                        </form>
                        <span class="todo-title">@t.Title</span>
                        <span class="spacer"></span>
                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn small">Редагувати</a>
                        <form asp-action="Delete" method="post" class="inline" onsubmit="return confirm('Видалити завдання?');">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="btn danger small">Видалити</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="empty">Список порожній 👆</div>
        }
    </div>
</section>
