@model HW_RazorPage.Models.TodoItem

@{
    ViewData["Title"] = "Редагувати завдання";
}

<section class="container">
    <h1 class="title">Редагувати завдання</h1>

    <div class="card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="input" />
                <span asp-validation-for="Title" class="validation"></span>
            </div>

            <div class="form-group checkbox">
                <input asp-for="IsCompleted" />
                <label asp-for="IsCompleted"></label>
            </div>

            <div class="actions">
                <button type="submit" class="btn primary">Зберегти</button>
                <a asp-action="Index" class="btn">Скасувати</a>
            </div>
        </form>
    </div>
</section>
