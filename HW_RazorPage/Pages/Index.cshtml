@page
@model HW_RazorPage.Pages.IndexModel
@{
    ViewData["Title"] = "To-Do List";
}

<section class="container">
    <h1 class="title">Мій список справ</h1>

    <div class="card">
        <h2>Додати нове завдання</h2>
        <form method="post" asp-page-handler="Create" class="todo-form">
            <div class="form-row">
                <input asp-for="NewTodo.Title" class="input" placeholder="Наприклад: Купити молоко" />
                <button type="submit" class="btn primary">Додати</button>
            </div>
            <span asp-validation-for="NewTodo.Title" class="validation"></span>
        </form>
    </div>

    <div class="card">
        <h2>Поточні завдання</h2>
        @if (Model.Todos.Any())
        {
            <ul class="todo-list">
                @foreach (var t in Model.Todos)
                {
                    <li class="todo-item @(t.IsCompleted ? "done" : "")">
                        <form method="post" asp-page-handler="Toggle" class="inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="icon-btn">@(t.IsCompleted ? "☑" : "☐")</button>
                        </form>

                        <span class="todo-title">@t.Title</span>

                        <span class="spacer"></span>
                        <a asp-page="Edit" asp-route-id="@t.Id" class="btn small">Редагувати</a>

                        <form method="post" asp-page-handler="Delete" class="inline" onsubmit="return confirm('Видалити завдання?');">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="btn danger small">Видалити</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="empty">Список порожній</div>
        }
    </div>
</section>
