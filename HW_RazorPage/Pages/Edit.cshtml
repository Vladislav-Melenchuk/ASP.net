@page "{id:int}"
@model HW_RazorPage.Pages.EditModel
@{
    ViewData["Title"] = "Редагувати завдання";
}

<section class="container">
    <h1 class="title">Редагувати завдання</h1>

    <div class="card">
        <form method="post">
            <input type="hidden" asp-for="Input.Id" />
            <div class="form-group">
                <label asp-for="Input.Title"></label>
                <input asp-for="Input.Title" class="input" />
                <span asp-validation-for="Input.Title" class="validation"></span>
            </div>
            <div class="form-group checkbox">
                <input asp-for="Input.IsCompleted" />
                <label asp-for="Input.IsCompleted"></label>
            </div>
            <div class="actions">
                <button type="submit" class="btn primary">Зберегти</button>
                <a asp-page="Index" class="btn">Скасувати</a>
            </div>
        </form>
    </div>
</section>
